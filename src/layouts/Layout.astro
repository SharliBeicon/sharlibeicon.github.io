---
interface Props {
  title: string
}

const { title } = Astro.props
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content="Portfolio CV from a developer to developers"
    />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <slot />
  </body>
</html>

<style is:global>
  html {
    font-family:
      Menlo,
      Monaco,
      Lucida Console,
      "Courier New",
      Courier,
      monospace;
    background: #eeeeee;
    letter-spacing: -0.025rem;
  }

  html.dark {
    background-color: #222831;
  }

  .dark h1,
  .dark h2,
  .dark h3,
  .dark h4 {
    color: #eeeeee;
  }

  .dark p,
  .dark a {
    color: #d1d1d1;
  }

  a:hover {
    text-decoration-thickness: 1px;
    cursor: pointer;
    color: #222831;
    font-weight: 800;
  }
  .dark a:hover {
    text-decoration-thickness: 2px;
    cursor: pointer;
    color: #d1d1d1;
    font-weight: 800;
  }

  body,
  figure {
    margin: 0;
    padding: 0;
  }

  a {
    color: #393e46;
    text-decoration: none;
  }

  ul {
    list-style: none;
    margin: 0;
    padding: 0;
  }

  *,
  *::before,
  *::after {
    box-sizing: border-box;
  }

  h1,
  h2,
  h3,
  h4 {
    margin: 0;
    font-family:
      system-ui,
      -apple-system,
      BlinkMacSystemFont,
      "Segoe UI",
      Roboto,
      Oxygen,
      Ubuntu,
      Cantarell,
      "Open Sans",
      "Helvetica Neue",
      sans-serif;
    color: #222831;
  }

  p {
    color: #393e46;
    font-size: 0.85rem;
    line-height: 1.5;
    margin: 0;
    text-wrap: pretty;
  }

  @media only screen and (max-width: 500px) {
    p {
      font-size: 0.8rem;
    }
  }
</style>
