---
import Layout from "../layouts/Layout.astro";
import { getCollection, type CollectionEntry } from "astro:content";
import Github from "../svg/github.svg";

const allPosts = await getCollection("blog");
const sortedPosts = allPosts.sort(
  (a: CollectionEntry<"blog">, b: CollectionEntry<"blog">) =>
    b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);

function formatDate(date: Date) {
  return date.toLocaleDateString("en-US", {
    year: "numeric",
    month: "long",
    day: "numeric",
  });
}
---

<Layout>
  <div
    class="flex flex-col min-h-screen max-h-screen p-6 md:px-12 gap-4 overflow-hidden bg-[var(--background1)] shadow-lg"
  >
    <!-- Header -->
    <header
      class="bg-[var(--background1)] border-b border-[var(--border-color)]"
    >
      <div class="max-w-4xl mx-auto px-6 py-8">
        <div class="flex items-center justify-between">
          <div>
            <h1 class="text-3xl mb-2">Blog</h1>
            <p class="text-[var(--fg1)]">
              Thoughts on development, technology and stuff.
            </p>
          </div>
          <a
            href="/"
            class="text-[var(--fg1)] hover:text-[var(--fg0)] transition-all duration-200 hover:scale-110 flex items-center gap-2 text-sm"
            title="Back to Home"
          >
            <svg
              class="w-4 h-4"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"
              ></path>
            </svg>
            Home
          </a>
        </div>
      </div>
    </header>

    <!-- Blog Posts Timeline -->
    <main class="max-w-4xl mx-auto px-6 py-12 flex-grow">
      {
        sortedPosts.length === 0 ? (
          <div class="text-center py-12">
            <p class="text-[var(--fg1)] text-md">
              No blog posts yet. Check back soon!
            </p>
          </div>
        ) : (
          <div class="space-y-4">
            {sortedPosts.map((post: CollectionEntry<"blog">) => (
              <article class="group">
                <a href={`/blog/${post.slug}`} class="block">
                  <div class="border-b border-[var(--border-color)] pb-4 hover:border-[var(--border-hover)] transition-all duration-200">
                    <div class="flex items-start justify-between mb-2">
                      <div class="flex-1">
                        <h2 class="text-lg font-bold group-hover:text-[var(--blue)] transition-colors duration-200 mb-1">
                          {post.data.title}
                        </h2>
                        <p class="text-[var(--fg1)] text-sm mb-2 leading-relaxed">
                          {post.data.description}
                        </p>
                      </div>
                      <time class="text-xs text-[var(--fg1)] ml-4 whitespace-nowrap">
                        {formatDate(post.data.pubDate)}
                      </time>
                    </div>

                    {post.data.tags && post.data.tags.length > 0 && (
                      <div class="flex gap-2 mt-2">
                        {post.data.tags.map((tag: string) => (
                          <span class="text-xs text-[var(--blue)] bg-[var(--blue)]/10 px-2 py-1 rounded-full">
                            #{tag}
                          </span>
                        ))}
                      </div>
                    )}
                  </div>
                </a>
              </article>
            ))}
          </div>
        )
      }
    </main>

    <!-- Footer -->
    <footer class="flex-shrink-0">
      <div
        class="flex justify-between items-center py-3 px-4 border-t border-[var(--border-color)] text-sm text-[var(--fg1)]"
      >
        <span class="opacity-80">Â© 2025 Charlie Bacon</span>
        <a
          href="https://github.com/sharlibeicon/sharlibeicon.github.io"
          target="_blank"
          rel="noopener noreferrer"
          class="flex items-center gap-2 text-[var(--fg1)] no-underline transition-colors duration-200 hover:text-[var(--fg0)]"
        >
          <Github
            width={24}
            height={24}
            class="fill-[var(--fg1)] transition-transform duration-200 hover:scale-110 hover:fill-[var(--fg0)]"
          />
          View on GitHub
        </a>
      </div>
    </footer>
  </div>
</Layout>

