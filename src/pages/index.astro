---
import Layout from "../layouts/Layout.astro";
import TerminalWrapper from "../components/TerminalWrapper.astro";
import Terminal from "../components/Terminal.astro";
import Github from "../svg/github.svg";
---

<Layout>
  <div
    class="flex flex-col min-h-screen max-h-screen p-6 md:px-12 gap-4 overflow-hidden bg-[var(--background1)] shadow-lg"
  >
    <header class="flex justify-end items-center">
      <div class="flex items-center gap-1 text-sm">
        <span class="text-[var(--fg2)] opacity-80"
          >Non-tech people, just click here →</span
        >
        <a
          href="/cv.pdf"
          download="Carlos_Tocino_CV.pdf"
          class="transition-transform duration-200 hover:scale-110 text-[var(--fg1)] hover:text-[var(--fg0)]"
          title="Download CV"
        >
          <svg class="w-5 h-5" viewBox="0 0 24 24" fill="currentColor">
            <path
              d="M14,2H6A2,2 0 0,0 4,4V20A2,2 0 0,0 6,22H18A2,2 0 0,0 20,20V8L14,2M18,20H6V4H13V9H18V20Z"
            ></path>
          </svg>
        </a>
      </div>
    </header>

    <main
      class="border border-[var(--border-color)] rounded-lg bg-[var(--background0)] backdrop-blur-sm transition-all duration-300 hover:border-[var(--border-hover)] flex flex-col overflow-hidden flex-1 min-h-0"
    >
      <!-- <TerminalWrapper /> -->
      <Terminal />
    </main>

    <footer class="flex-shrink-0">
      <div
        class="flex justify-between items-center py-3 px-4 border-t border-[var(--border-color)] text-sm text-[var(--fg1)]"
      >
        <span class="opacity-80">© 2025 Charlie Bacon</span>
        <a
          href="https://github.com/sharlibeicon/sharlibeicon.github.io"
          target="_blank"
          rel="noopener noreferrer"
          class="flex items-center gap-2 text-[var(--fg1)] no-underline transition-colors duration-200 hover:text-[var(--fg0)]"
        >
          <Github
            width={24}
            height={24}
            class="fill-[var(--fg1)] transition-transform duration-200 hover:scale-110 hover:fill-[var(--fg0)]"
          />
          View on GitHub
        </a>
      </div>
    </footer>
  </div>
</Layout>
