---
import content from "@/content/data/commands.json"

interface Props {
  lang: "en" | "es"
}

const { lang } = Astro.props
---

<ninja-keys></ninja-keys>
<footer>
  {content[lang].title1}<kbd>Ctrl</kbd> + <kbd>K</kbd>{content[lang].title2}
</footer>

<script>
  import Icons from "@/content/js/Icons.js"
  import "ninja-keys"

  const { github, linkedin, twitter } = Icons
  const ninja = document.querySelector("ninja-keys")
  if (ninja !== null) {
    ninja.data = [
      {
        id: "Print Page",
        title: "ðŸ–¨ï¸ Print CV",
        hotkey: "ctrl+P",
        section: "Actions",
        handler: () => {
          window.print()
        },
      },
      {
        id: "Social Media",
        title: "ðŸ‘€ Check Social Media",
        hotkey: "ctrl+M",
        section: "Actions",
        children: ["GitHub", "LinkedIn", "Twitter"],
        handler: () => {
          ninja.open({ parent: "Social Media" })
          return { keepOpen: true }
        },
      },
      {
        id: "GitHub",
        title: "GitHub",
        icon: github,
        hotkey: "ctrl+G",
        parent: "Social Media",
        handler: () => {
          window.open("https://github.com/SharliBeicon", "_blank")
        },
      },
      {
        id: "LinkedIn",
        title: "LinkedIn",
        icon: linkedin,
        hotkey: "ctrl+I",
        parent: "Social Media",
        handler: () => {
          window.open("https://www.linkedin.com/in/sharlibeicon/", "_blank")
        },
      },
      {
        id: "Twitter",
        title: "Twitter",
        icon: twitter,
        hotkey: "ctrl+X",
        parent: "Social Media",
        handler: () => {
          window.open("https://twitter.com/SharliBeicon", "_blank")
        },
      },
      {
        id: "Theme Selection",
        title: "ðŸ” Theme Selection",
        hotkey: "ctrl+C",
        section: "Actions",
        children: ["Light Theme", "Dark Theme"],
        handler: () => {
          ninja.open({ parent: "Theme Selection" })
          return { keepOpen: true }
        },
      },
      {
        id: "Light Theme",
        title: "ðŸ˜Ž Light Theme",
        hotkey: "ctrl+L",
        parent: "Theme Selection",
        handler: () => {
          document.documentElement.classList.remove("dark")
        },
      },
      {
        id: "Dark Theme",
        title: "ðŸŒš Dark Theme",
        hotkey: "ctrl+D",
        parent: "Theme Selection",
        handler: () => {
          document.documentElement.classList.add("dark")
        },
      },
      {
        id: "Translate Page",
        title: "ðŸ‡¬ðŸ‡§/ðŸ‡ªðŸ‡¸ Translate Page",
        hotkey: "ctrl+T",
        section: "Actions",
        children: ["English", "Spanish"],
        handler: () => {
          ninja.open({ parent: "Translate Page" })
          return { keepOpen: true }
        },
      },
      {
        id: "English",
        title: "ðŸ‡¬ðŸ‡§ English",
        hotkey: "ctrl+E",
        parent: "Translate Page",
        handler: () => {
          window.location.replace("/")
        },
      },
      {
        id: "Spanish",
        title: "ðŸ‡ªðŸ‡¸ Spanish",
        hotkey: "ctrl+S",
        parent: "Translate Page",
        handler: () => {
          window.location.replace("/es")
        },
      },
    ]
  }
</script>

<style>
  footer {
    background: #f7f7f7;
    border-top: 1px solid #e2e2e2;
    position: fixed;
    bottom: 0px;
    padding-block: 8px;
    text-align: center;
    border-top-left-radius: 10px;
    border-top-right-radius: 10px;
    font-size: 14px;
    width: 450px;
    left: 50%;
    transform: translate(-50%);
    margin: 0 auto 0;
    view-timeline-name: --revealing;
    view-timeline-axis: block;

    animation: linear 0.3s fadeIn;
    animation-timeline: --revealing;
    animation-range: entry 100% cover 10%;
  }

  kbd {
    background: #e8e8e8;
    border-radius: 4px;
    padding: 2px 4px;
    font-size: 12px;
  }

  @media only screen and (max-width: 600px) {
    footer {
      display: none;
    }
  }

  @media print {
    footer {
      display: none;
    }
    ninja-keys {
      display: none;
    }
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
    }
    to {
      opacity: 1;
    }
  }
</style>
