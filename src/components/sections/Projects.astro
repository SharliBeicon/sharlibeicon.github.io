---
import Section from "@/components/Section.astro"
import projects from "@/content/data/projects.json"

interface Props {
  lang: "en" | "es"
  title: string
}

const { lang, title } = Astro.props
---

<Section title={title}>
  <div class="container">
    <ul>
      {
        projects[lang].map((item) => {
          return (
            <li>
              <article>
                <header>
                  <a href={item.url} target="_blank">
                    <h3>
                      {item.name} {item.isActive && <span>&bull;</span>}
                    </h3>
                  </a>

                  <p>{item.description}</p>
                </header>
                <footer>
                  {item.tags.map((tag) => {
                    return <li>{tag}</li>
                  })}
                </footer>
              </article>
            </li>
          )
        })
      }
    </ul>
  </div>
</Section>

<style>
  ul {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 1rem;
  }

  article {
    border-radius: 8px;
    border: 1px solid #e2e2e2;
    display: flex;
    gap: 16px;
    flex-direction: column;
    padding: 16px;
    height: 100%;
  }

  h3 {
    margin-bottom: 6px;
  }

  article h3 span {
    color: rgb(0, 197, 36);
  }

  a:hover {
    text-decoration: underline;
    text-decoration-color: #00adb5;
  }

  p {
    font-size: 0.7rem;
    line-height: 1.15rem;
  }

  header {
    flex: 1;
  }

  footer {
    display: flex;
    flex-wrap: wrap;
    gap: 4px;
    font-size: 0.8rem;
  }
  footer li {
    border-radius: 8px;
    background: #00adb5;
    color: #fff;
    font-size: 0.7rem;
    font-weight: 400;
    padding: 0.2rem 0.6rem;
    transition: background 500ms;
  }
  footer li:hover {
    background: #00696f;
  }
</style>
