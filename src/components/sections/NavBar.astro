---
import ThemeIcon from "@/components/ThemeIcon.astro"
import LanguageToggle from "@/components/LanguageToggle.astro"
interface Props {
  translated: boolean
}

const { translated } = Astro.props
---

<header>
  <nav>
  <map name="noaimini10">
    <area href="https://baccyflap.com/noai" shape="poly" coords="19,3,19,9,30,9,30,21,19,21,19,29,68,29,68,3" target="_blank" alt="no ai webring" title="no ai webring">
    <area href="https://baccyflap.com/noai/?prv&s=cbp" target="_top" shape="rect" coords="0,0,16,20" alt="previous" title="previous">
    <area href="https://baccyflap.com/noai/?rnd" target="_top" shape="rect" coords="20,12,28,20" alt="random" title="random">
    <area href="https://baccyflap.com/noai/?nxt&s=cbp" target="_top" shape="rect" coords="71,10,87,30" alt="next" title="next">
  </map>
<img usemap="#noaimini10" src="https://baccyflap.com/noai/miniwidget10.gif" alt="a black rectangle outlined in animated, shifting red and blue pixels, moving around the sign. there are two arrows, one pointing left and one right, protruding from the sign. on the sign are the words THE NO AI WEBRING and a small question mark beside them">
    <ThemeIcon />
    <LanguageToggle translated={translated} />
  </nav>
</header>

<style>
  nav {
    display: flex;
    justify-content: end;
    align-items: center;
    gap: 20px;
    margin-bottom: 20px;
  }
  @media print {
    header {
      display: none;
    }
  }
</style>
