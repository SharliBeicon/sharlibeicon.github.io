---
import Section from "@/components/Section.astro"
import education from "@/content/data/education.json"


interface Props {
  lang: "en" | "es",
  title: string
}

const { lang, title } = Astro.props
---

<Section title={title}>
  <div class="container">
    <ul>
      {
        education[lang].map((item) => {
          return (
            <li>
              <article>
                <header>
                  <div>
                    <h3>{item.institution}</h3>
                    <h4>{item.school}</h4>
                  </div>
                  <p>{item.duration}</p>
                </header>
                <footer>
                  <p>{item.title}</p>
                </footer>
              </article>
            </li>
          )
        })
      }
    </ul>
  </div>
</Section>

<style>
  .container {
    margin-bottom: 30px;
  }
  ul {
    display: flex;
    flex-direction: column;
    gap: 32px;
  }

  article h3 {
    font-weight: 500;
    margin-bottom: 5px;
  }

  article h4 {
    font-weight: 300;
    margin-bottom: 3px;
    color: #00adb5;
  }

  header p {
    font-size: 0.95rem;
    color: #a7a7a7;
  }

  header {
    display: flex;
    justify-content: space-between;
    align-items: first flex-start;
  }

  @media print {
    p {
      font-size: 0.8rem;
    }
</style>
