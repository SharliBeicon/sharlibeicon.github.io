---
const hobbies = [
  {
    category: "Music",
    icon: "🎸",
    activities: [
      "Playing guitar and piano",
      "Composing electronic music", 
      "Attending live concerts and festivals"
    ]
  },
  {
    category: "Fitness",
    icon: "🏃‍♂️",
    activities: [
      "Long-distance running",
      "Rock climbing",
      "Yoga and meditation"
    ]
  },
  {
    category: "Learning",
    icon: "📚",
    activities: [
      "Reading sci-fi novels",
      "Learning new languages (currently: Japanese)",
      "Photography and digital art"
    ]
  },
  {
    category: "Adventure",
    icon: "🌍",
    activities: [
      "Hiking and camping",
      "Travel and exploring new cultures",
      "Cooking exotic cuisines"
    ]
  },
  {
    category: "Gaming",
    icon: "🎮",
    activities: [
      "Indie game development",
      "Strategy and puzzle games",
      "Retro gaming"
    ]
  }
];
---

<div class="portfolio-content text-[var(--fg0)]">
  <h1 class="text-2xl font-bold text-[var(--yellow)] mb-4">When I'm Not Coding</h1>
  <div class="border-b border-[var(--bg2)] mb-6"></div>

  <div class="space-y-6">
    {hobbies.map(hobby => (
      <div class="border border-[var(--bg2)] rounded-lg p-4 bg-[var(--background1)]">
        <div class="flex items-center gap-3 mb-3">
          <span class="text-2xl">{hobby.icon}</span>
          <h3 class="text-lg font-bold text-[var(--green)]">{hobby.category}:</h3>
        </div>
        
        <ul class="ml-11 space-y-2">
          {hobby.activities.map(activity => (
            <li class="flex items-start gap-2">
              <span class="text-[var(--yellow)] mt-1">-</span>
              <span class="text-[var(--fg1)]">{activity}</span>
            </li>
          ))}
        </ul>
      </div>
    ))}
  </div>
</div>
