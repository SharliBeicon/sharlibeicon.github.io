---
const projects = [
  {
    name: "TuiFolio",
    year: "2024",
    description: "Terminal-style portfolio website built with Astro",
    tech: ["Astro", "TypeScript", "Tailwind CSS", "WebTUI"],
    note: "You're looking at it!",
    icon: "üöÄ"
  },
  {
    name: "GameHub",
    year: "2023", 
    description: "Real-time multiplayer game platform",
    tech: ["React", "Node.js", "Socket.io", "PostgreSQL"],
    features: ["Live chat", "matchmaking", "tournaments"],
    icon: "üéÆ"
  },
  {
    name: "DataViz Pro",
    year: "2023",
    description: "Interactive data visualization dashboard", 
    tech: ["D3.js", "React", "Python FastAPI"],
    features: ["Real-time updates", "custom charts"],
    icon: "üìä"
  },
  {
    name: "DevTools Suite",
    year: "2022",
    description: "CLI tools for developer productivity",
    tech: ["Go", "Cobra CLI"],
    features: ["Code generation", "project scaffolding"],
    icon: "üõ†Ô∏è"
  }
];
---

<div class="portfolio-content text-[var(--fg0)]">
  <h1 class="text-2xl font-bold text-[var(--yellow)] mb-4">Featured Projects</h1>
  <div class="border-b border-[var(--bg2)] mb-6"></div>

  <div class="space-y-6">
    {projects.map(project => (
      <div class="border border-[var(--bg2)] rounded-lg p-4 bg-[var(--background1)]">
        <div class="flex items-start gap-3 mb-3">
          <span class="text-2xl">{project.icon}</span>
          <div class="flex-1">
            <div class="flex items-center gap-2 mb-1">
              <h3 class="text-lg font-bold text-[var(--green)]">{project.name}</h3>
              <span class="text-sm text-[var(--fg2)] bg-[var(--bg2)] px-2 py-1 rounded">
                {project.year}
              </span>
            </div>
            <p class="text-[var(--fg1)] mb-3">{project.description}</p>
          </div>
        </div>

        <div class="mb-3">
          <span class="text-[var(--blue)] font-medium">Tech Stack: </span>
          <div class="flex flex-wrap gap-1 mt-1">
            {project.tech.map(tech => (
              <span class="text-xs bg-[var(--bg2)] text-[var(--fg0)] px-2 py-1 rounded">
                {tech}
              </span>
            ))}
          </div>
        </div>

        {project.features && (
          <div class="mb-3">
            <span class="text-[var(--purple)] font-medium">Features: </span>
            <span class="text-[var(--fg1)]">{project.features.join(", ")}</span>
          </div>
        )}

        {project.note && (
          <div class="text-[var(--yellow)] font-medium italic">
            {project.note}
          </div>
        )}
      </div>
    ))}
  </div>
</div>
