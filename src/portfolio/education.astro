---
const education = {
  degree: "Bachelor of Science in Computer Science",
  university: "University of Technology",
  years: "2014-2018",
  gpa: "3.8/4.0",
  coursework: [
    "Data Structures",
    "Algorithms", 
    "Software Engineering",
    "Database Systems"
  ]
};

const certifications = [
  { name: "AWS Certified Solutions Architect", year: "2023" },
  { name: "Google Cloud Professional Developer", year: "2022" },
  { name: "Kubernetes Administrator (CKA)", year: "2022" },
  { name: "MongoDB Certified Developer", year: "2021" }
];

const learningActivities = [
  "Regular attendee at tech conferences",
  "Active in open source communities",
  "Always exploring new technologies and frameworks"
];
---

<div class="portfolio-content text-[var(--fg0)]">
  <h1 class="text-2xl font-bold text-[var(--yellow)] mb-4">Education & Certifications</h1>
  <div class="border-b border-[var(--bg2)] mb-6"></div>

  <!-- Education Section -->
  <div class="mb-8">
    <div class="flex items-start gap-3 mb-4">
      <span class="text-2xl">ðŸŽ“</span>
      <div>
        <h3 class="text-lg font-bold text-[var(--green)]">{education.degree}</h3>
        <p class="text-[var(--blue)] font-medium">{education.university} ({education.years})</p>
        <p class="text-sm text-[var(--purple)] mt-1">GPA: {education.gpa}</p>
      </div>
    </div>
    
    <div class="ml-11">
      <p class="text-[var(--fg1)] mb-2">Relevant Coursework:</p>
      <div class="flex flex-wrap gap-2">
        {education.coursework.map(course => (
          <span class="text-xs bg-[var(--bg2)] text-[var(--fg0)] px-2 py-1 rounded">
            {course}
          </span>
        ))}
      </div>
    </div>
  </div>

  <!-- Certifications Section -->
  <div class="mb-8">
    <div class="flex items-center gap-3 mb-4">
      <span class="text-2xl">ðŸ“œ</span>
      <h3 class="text-lg font-bold text-[var(--green)]">Certifications</h3>
    </div>
    
    <div class="ml-11 space-y-3">
      {certifications.map(cert => (
        <div class="flex items-center justify-between border border-[var(--bg2)] rounded p-3 bg-[var(--background1)]">
          <span class="text-[var(--fg0)]">{cert.name}</span>
          <span class="text-sm text-[var(--blue)] bg-[var(--bg2)] px-2 py-1 rounded">
            {cert.year}
          </span>
        </div>
      ))}
    </div>
  </div>

  <!-- Continuous Learning Section -->
  <div>
    <div class="flex items-center gap-3 mb-4">
      <span class="text-2xl">ðŸ“š</span>
      <h3 class="text-lg font-bold text-[var(--green)]">Continuous Learning</h3>
    </div>
    
    <div class="ml-11">
      <ul class="space-y-2">
        {learningActivities.map(activity => (
          <li class="flex items-start gap-2">
            <span class="text-[var(--yellow)] mt-1">â€¢</span>
