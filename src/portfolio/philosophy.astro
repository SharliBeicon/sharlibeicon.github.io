---
const philosophyData = {
  quote: "Code is poetry in motion, and every bug is just a haiku waiting to be debugged.",
  principles: [
    "Write code for humans, not just computers",
    "Test early, test often, test everything", 
    "Simplicity is the ultimate sophistication",
    "Embrace failure as a learning opportunity",
    "Share knowledge freely and learn constantly"
  ],
  favoriteQuote: {
    text: "The best error message is the one that never shows up.",
    author: "Thomas Fuchs"
  },
  motto: "Build it right, build it fast, build it to last."
};
---

<div class="portfolio-content text-[var(--fg0)]">
  <h1 class="text-2xl font-bold text-[var(--yellow)] mb-4">Development Philosophy</h1>
  <div class="border-b border-[var(--bg2)] mb-6"></div>

  <!-- Main Philosophy Quote -->
  <div class="bg-[var(--background1)] border-l-4 border-[var(--yellow)] p-4 mb-6 italic">
    <p class="text-[var(--fg0)] text-lg leading-relaxed">
      "{philosophyData.quote}"
    </p>
  </div>

  <!-- Core Principles -->
  <div class="mb-8">
    <h3 class="text-lg font-bold text-[var(--green)] mb-4">Core Principles:</h3>
    <ul class="space-y-3">
      {philosophyData.principles.map(principle => (
        <li class="flex items-start gap-3">
          <span class="text-[var(--blue)] mt-1">â–¶</span>
          <span class="text-[var(--fg1)]">{principle}</span>
        </li>
      ))}
    </ul>
  </div>

  <!-- Favorite Quote -->
  <div class="mb-8">
    <h3 class="text-lg font-bold text-[var(--green)] mb-4">Favorite Quote:</h3>
    <div class="bg-[var(--background1)] border border-[var(--bg2)] rounded-lg p-4">
      <blockquote class="text-[var(--fg0)] italic mb-2">
        "{philosophyData.favoriteQuote.text}"
      </blockquote>
      <cite class="text-[var(--blue)] text-sm">
        - {philosophyData.favoriteQuote.author}
      </cite>
    </div>
  </div>

  <!-- Personal Motto -->
  <div>
    <h3 class="text-lg font-bold text-[var(--green)] mb-4">Personal Motto:</h3>
    <div class="bg-[var(--purple)] bg-opacity-10 border border-[var(--purple)] rounded-lg p-4">
      <p class="text-[var(--purple)] font-bold text-lg text-center">
        "{philosophyData.motto}"
      </p>
    </div>
  </div>
</div>
